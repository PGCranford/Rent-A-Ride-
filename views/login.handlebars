<head>
    <link rel="stylesheet" href="/stylesheets/login.css">
</head>

<body>
    <h1 class='fs-1 fw-bold text-center text-light mt-5'>Fill out the form below to Login</h1>
    <div class="container d-inline-flex d-sm-flex d-md-flex d-lg-flex flex-row p-4 justify-content-evenly flex-wrap g-col-4 login-form">
        <form class="row col-3 align-items-center">
                <label for="renter-login" class="fw-bold text-light">Renter Name:</label>
                <input type="text" id="renter-login" />
                <label for="email-login" class="fw-bold text-light">Email:</label>
                <input type="text" id="email-login" />
                <label for="password-login" class="fw-bold text-light">Password:</label>
                <input type="password" id="password-login" />
            <div>
                <button type="submit">Login</button>
            </div>
        </form>
    </div>
    <h1 class='fs-1 fw-bold text-center text-light mt-5'>Fill out the form below to Signup</h1>
    <div class="container d-inline-flex d-sm-flex d-md-flex d-lg-flex flex-row p-4 justify-content-evenly flex-wrap g-col-4 signup-form">
        <form class="row col-3 align-items-center">
                <label for="renter-login" class="fw-bold text-light">Renter Name:</label>
                <input type="text" id="renter-signup" />
                <label for="email-signup" class="fw-bold text-light">Email:</label>
                <input type="text" id="email-signup" />
                <label for="password-signup" class="fw-bold text-light">Password:</label>
                <input type="password" id="password-signup" />
            <div>
                <button type="submit">Signup</button>
            </div>
        </form>
    </div>
</body>


<script src="/javascript/login.js"></script>