<head>
    <link
        rel='stylesheet'
        href='https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css'
    />
    <link rel='stylesheet' href='/stylesheets/vehicle.css' />
    <link rel='stylesheet' href='/stylesheets/datepicker.min.css' />
</head>
<div class='is-flex justify-content-center'>
    <h1 class='vehicle-page-title is-size-1 has-text-weight-bold'>Choose a
        Rental</h1>
</div>
<div class='container is-fluid'>
    <div class='columns'>
        {{#each vehicles}}
            {{!-- {{log this}} --}}
            <div class='column vehicle-styling'>
                <p>{{vehicleName}}</p>
                <p>{{vehicleMake}}</p>
                <p>{{vehicleModel}}</p>
                <p>{{vehicleYear}}</p>
                <button
                    id='reserve'
                    class='reserve-btn button is-normal'
                >Reserve</button>
            </div>
        {{/each}}
    </div>
</div>
<dialog id='reservation-modal'>
    <form method='dialog'>
        <div>
            <div class='date-range'></div>
            <div class='date-range-end'></div>

        </div>
        <button type='submit' id='reserve-button'>submit</button>
    </form>
</dialog>

<script src='/javascript/datepicker.min.js'></script>
<script src='/javascript/logout.js'></script>
<script src='/javascript/reserve.js'></script>