<head>
    <link
        href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
        rel='stylesheet'
        integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
        crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/stylesheets/vehicle.css' />
    <link rel='stylesheet' href='/stylesheets/datepicker.min.css' />
</head>
<div class='fs-1 fw-bold text-center text-light mt-5'>
    <h1>Choose A Rental</h1>
</div>
<div>
    <div
        class='container d-inline-flex d-sm-flex d-md-flex d-lg-flex flex-row p-4 justify-content-evenly flex-wrap g-col-4'
    >
        {{#each vehicles}}
            {{!-- {{log this}} --}}
            <div
                class='row vehicle-styling m-2 p-3 bg-light rounded text-center'
            >
                <p>{{vehicleName}}</p>
                <p>{{vehicleMake}}</p>
                <p>{{vehicleModel}}</p>
                <p>{{vehicleYear}}</p>
                <button
                    id='reserve'
                    class='btn btn-success btn-sm'
                >Reserve</button>
            </div>
        {{/each}}
    </div>
</div>
<dialog id='reservation-modal'>
    <form method='dialog'>
        <div>
            <div class='date-range'></div>
            <div class='date-range-end'></div>

        </div>
        <button type='submit' id='reserve-button'>submit</button>
    </form>
</dialog>

<script src='/javascript/datepicker.min.js'></script>
<script src='/javascript/logout.js'></script>
<script src='/javascript/reserve.js'></script>